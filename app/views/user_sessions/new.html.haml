- form_for @user_session do |f|
  = f.error_messages
  %p
    = f.label :username
    %br
    = f.text_field :username
  %p
    = f.label :password
    %br
    = f.password_field :password
  %p
    = f.submit "Submit"
  %h2
    Or use OpenID
  %p
    = f.label :openid_identifier, "OpenID URL"
    %br
    = f.text_field :openid_identifier
  %p
    = f.submit "Submit"
